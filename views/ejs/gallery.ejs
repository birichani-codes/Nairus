<script>
  async function loadCarouselReviews() {
    // Fetching the reviews data from the API endpoint
    const response = await fetch("/api/recent-testimonials");
    const reviews = await response.json();  // Assuming the API returns an array of reviews

    // Selecting the carousel inner element
    const carouselInner = document.querySelector("#carousel-container .carousel-inner");

    // Clear previous reviews
    carouselInner.innerHTML = "";

    // Loop through the reviews and create carousel items
    reviews.forEach((review, index) => {
      // Dynamically creating carousel item for each review
      const isActive = index === 0 ? "active" : "";  // Mark first item as active
      const reviewItem = `
        <div class="carousel-item ${isActive}">
          <div class="review-item" style="padding: 20px; background-color: #fff; text-align: center;">
            <h3 style="font-size: 1.5rem; color: #8b0000;">${review.name}</h3>
            <p style="font-size: 1.2rem; color: #555;">
              ${"★".repeat(review.rating)} <!-- Displaying rating as stars -->
            </p>
            <p style="font-size: 1rem; color: #555;">${review.feedback}</p>
          </div>
        </div>
      `;

      // Append the review item to the carousel
      carouselInner.innerHTML += reviewItem;
    });
  }

  // Call the function to load reviews when the page is ready
  loadCarouselReviews();
</script>



