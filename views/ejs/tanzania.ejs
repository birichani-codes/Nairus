      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      width: 300px;
      transition: transform 0.3s;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .card-content {
      padding: 20px;
      text-align: center;
    }

    .card-content h3 {
      margin: 10px 0;
      font-size: 20px;
      color: #333;
    }

    .card-content p {
      font-size: 14px;
      color: #555;
    }

    .card-content a {
      color: #ff6f00;
      text-decoration: none;
      font-weight: bold;
    }

    .card-content a:hover {
      text-decoration: underline;
    }

    /* Section 2: Features */
    .features-section {
      background-color: #fff;
      padding: 50px 20px;
      text-align: center;
    }

    .features-container {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      gap: 20px;
    }

    .feature {
      max-width: 250px;
      text-align: center;
    }

    .feature-icon {
      font-size: 50px;
      color: #ff6f00;
      margin-bottom: 20px;
    }

    .feature h3 {
      font-size: 18px;
      margin-bottom: 10px;
      color: #333;
    }

    .feature p {
      font-size: 14px;
      color: #555;
    }
  </style>
</head>
