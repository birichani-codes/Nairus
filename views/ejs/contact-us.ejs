  <script>
    // Fetch countries for Nationality dropdown
    document.addEventListener('DOMContentLoaded', async () => {
      const nationalitySelect = document.getElementById('nationality');
      try {
        const response = await fetch('https://restcountries.com/v3.1/all');
        const countries = await response.json();
        nationalitySelect.innerHTML = '<option value="">Select</option>';
        countries.sort((a, b) => a.name.common.localeCompare(b.name.common));
        countries.forEach(country => {
          const option = document.createElement('option');
          option.value = country.cca2;
          option.textContent = country.name.common;
          nationalitySelect.appendChild(option);
        });
      } catch (error) {
        nationalitySelect.innerHTML = '<option value="">Error loading countries</option>';
        console.error('Error fetching countries:', error);
      }
    });

    // Add reCAPTCHA token before form submission
    const form = document.getElementById('quoteForm');
  form.addEventListener('submit', async (event) => {
    event.preventDefault();
    grecaptcha.ready(async () => {
      const token = await grecaptcha.execute('6LeHXooqAAAAAA-3un9GzZE1H-qKoNkG4XaUtwPo', { action: 'submit' });
      const tokenInput = document.createElement('input');
      tokenInput.type = 'hidden';
      tokenInput.name = 'g-recaptcha-response';
      tokenInput.value = token;
      form.appendChild(tokenInput);
      form.submit();
    });
  });
  </script>
