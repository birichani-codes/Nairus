    }

    .main-image img {
      width: 100%;
      height: auto;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .image-gallery {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    .gallery-item img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

    .card {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .card h3 {
      color: #2c3e50;
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    ol.decorated-list {
      list-style: none;
      counter-reset: list-counter;
      margin: 0;
      padding: 0;
    }

    ol.decorated-list li {
      counter-increment: list-counter;
      margin: 10px 0;
      padding: 10px 15px;
      background: #f8f9fa;
      border-left: 5px solid #3498db;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      position: relative;
    }

    ol.decorated-list li::before {
      content: counter(list-counter) ".";
      font-weight: bold;
      color: #3498db;
      position: absolute;
      left: -30px;
      font-size: 1.2rem;
    }

    .btn-book-now {
      display: block;
      background-color: #e74c3c;
      color: white;
      font-size: 1.2rem;
      padding: 12px 25px;
      text-align: center;
      border-radius: 30px;
      text-decoration: none;
      margin-top: 20px;
      transition: background-color 0.3s ease;
    }

    .btn-book-now:hover {
      background-color: #c0392b;
    }
  </style>
</head>
<body>

  <div class="container">
    <!-- Main Content -->
    <div class="main-content">
      <h1><%= tourPackage.title %></h1>
      
      <!-- Main Image -->
      <div class="main-image">
        <img src="/images/<%= tourPackage.image_url || 'default.jpg' %>" alt="<%= tourPackage.title %>">
      </div>
      
      <!-- Gallery -->
      <div class="image-gallery">
        <% const galleryImages = ['g-1.jpg', 'g-2.jpg', 'g-3.jpg', 'g-4.jpg', 'g-5.jpg']; %>
        <% galleryImages.forEach(function(image) { %>
          <div class="gallery-item">
            <img src="/images/<%= image %>" alt="<%= tourPackage.title %>">
          </div>
        <% }) %>
      </div>
      
      <!-- Package Details -->
      <div class="card">
        <h3>About the Tour</h3>
        <% if (tourPackage.about && Array.isArray(tourPackage.about)) { %>
          <ol class="decorated-list">
            <% tourPackage.about.forEach(function(point) { %>
              <li><%= point %></li>
            <% }) %>
          </ol>
        <% } else { %>
          <p>No information available about this tour.</p>
        <% } %>
      </div>
      
      <div class="card">
        <h3>Highlights</h3>
        <% if (tourPackage.highlights && Array.isArray(tourPackage.highlights)) { %>
          <ol class="decorated-list">
            <% tourPackage.highlights.forEach(function(point) { %>
              <li><%= point %></li>
            <% }) %>
          </ol>
        <% } else { %>
          <p>No highlights available for this tour.</p>
        <% } %>
      </div>
      
      <div class="card">
        <h3>Inclusions</h3>
        <% if (tourPackage.inclusions && Array.isArray(tourPackage.inclusions)) { %>
          <ol class="decorated-list">
            <% tourPackage.inclusions.forEach(function(point) { %>
              <li><%= point %></li>
            <% }) %>
          </ol>
        <% } else { %>
          <p>No inclusions available for this tour.</p>
        <% } %>
      </div>
      
      <div class="card">
        <h3>Exclusions</h3>
        <% if (tourPackage.exclusions && Array.isArray(tourPackage.exclusions)) { %>
          <ol class="decorated-list">
            <% tourPackage.exclusions.forEach(function(point) { %>
              <li><%= point %></li>
            <% }) %>
          </ol>
        <% } else { %>
          <p>No exclusions available for this tour.</p>
        <% } %>
      </div>
      
      <div class="card">
        <h3>Special Offers</h3>
        <% if (tourPackage.special_offers && Array.isArray(tourPackage.special_offers)) { %>
          <ol class="decorated-list">
            <% tourPackage.special_offers.forEach(function(offer) { %>
              <li><%= offer %></li>
            <% }) %>
          </ol>
        <% } else { %>
          <p>No special offers available for this tour.</p>
        <% } %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
      <div class="trip-info">
        <h3>Trip Information</h3>
        <p><span>✔</span> Location: <%= tourPackage.location || 'Not specified' %></p>
        <p><span>✔</span> Days Count: <%= tourPackage.days_count || 'N/A' %></p>
        <p><span>✔</span> Free Sightseeing & Hotel</p>
      </div>

      <!-- Book Now Button -->
      <a href="/book/<%= tourPackage.id %>" class="btn-book-now">Book Now</a>
    </div>
  </div>

</body>

