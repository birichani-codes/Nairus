  <!-- Blog Section -->
  <% blogs.forEach(blog => { %>
    <div class="blog-container">
      <img src="<%= blog.image_url || 'images/default.jpg' %>" alt="Blog Image" class="blog-image">
      <div class="blog-text">
        <div class="blog-category"><%= blog.category %></div>
        <h2 class="blog-title"><%= blog.title %></h2>
        <div class="blog-metadata">Posted by <%= blog.author || 'Admin' %> | <%= blog.created_at.toLocaleDateString() %> | <%= blog.read_time || '5' %> min read</div>
        <div class="blog-content">
          <p><%= blog.excerpt || 'No content available.' %></p>
        </div>
        <a href="/blog/<%= blog.id %>" class="read-more-btn">Read More</a>
      </div>
    </div>
  <% }) %>

  <!-- Related Blogs Section -->
  <div class="related-blogs">
    <% blogs.slice(0, 3).forEach(relatedBlog => { %>
      <div class="related-blog">
        <img src="<%= relatedBlog.image_url || 'images/default.jpg' %>" alt="Related Blog">
        <div class="related-content">
          <h4><a href="/blog/<%= relatedBlog.id %>"><%= relatedBlog.title %></a></h4>
          <div class="related-metadata">Category: <%= relatedBlog.category %> | By <%= relatedBlog.author || 'Admin' %> | <%= relatedBlog.created_at.toLocaleDateString() %> | <%= relatedBlog.read_time || '4' %> min read</div>
          <p><%= relatedBlog.excerpt || 'No preview available.' %></p>
          <a href="/blog/<%= relatedBlog.id %>" class="related-read-more">Read More</a>
        </div>
      </div>
    <% }) %>
  </div>

</body>


